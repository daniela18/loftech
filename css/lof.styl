
burdeo= #4f0b18
gris= #7E7D7D	
gris_claro= #f2f2f2
rojo= #6D0610

body 
	background white !important
	font-family 'Source Sans Pro', sans-serif !important
	.nav
		background white
		border-bottom solid 5px #E8E8E8
		nav
			.logo
				float left
				margin 1em 0 0 0
				img
					width 115%
			.list
				overflow hidden
				list-style none
				margin 0
				li
					float right
					padding 0 3em
					margin-top 5em
					-webkit-transition- 0.4s ease
					-moz-transition 0.4s ease
					-o-transition 0.4s ease
					transition 0.4s ease
					&:hover .arrow
						display block
					&:hover a 
						color #333		
					a 
						font-size 24px
						color gris
						text-decoration none
				.arrow 
					height 16px
					width 24px
					margin 0 auto
					display none
					i
						-webkit-transform rotate(270deg)
						font-size 20px
						color #E8E8E8	
						top 0		
	.section
		background gris_claro
		section
			.text
				padding  6em 0
				p 
					color gris
					font-size 4em
	.big-arrow
		.flecha
			border-left solid 40px transparent
			border-right solid 40px transparent
			border-top solid 30px gris_claro	
			height 2em
			margin 0 auto 
			width 2em
	.container
		.circulos
			overflow hidden
			width 860px
			margin 0 auto
			.circulo-container
				float left
				h2
					text-align center
					color gris
					margin-bottom 2em
					&:hover
						color #333333
				.circulo
					position relative
					width 160px
					height 160px
					border-radius 50%
					background rojo
					margin 4em 4.5em 2em 4.5em
					-webkit-transition-duration: 0.4s;
					-webkit-transform: translateZ(0);
					&:hover
						-webkit-transform: translateY(-7px);
				.icon
					position absolute
					right 4.2em
					top 4em
					i 
						font-size 3em
						color white
	.contacto
		height 70px
		background gris_claro
						